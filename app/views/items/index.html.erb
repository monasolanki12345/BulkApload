<h1>Items#index</h1>
<p>Find me in app/views/items/index.html.erb</p>

<h1>Items</h1>
<%=
  link_to 'Download as Excel',
  items_path(format: :xlsx)
%>
<%=
  link_to 'Upload from Excel',
  new_items_import_path
%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to "Destroy", item_path(item), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>